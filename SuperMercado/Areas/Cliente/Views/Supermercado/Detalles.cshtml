@model SuperMercado.Models.Producto

@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_LayoutDetalles.cshtml";
}
<section class="banner_slider banner_slide_half p-0">
    <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item bg_light_green active">
                <div class="banner_slide_content slide_content_wrap">
                    <div class="container-fluid">
                        <div class="row align-items-center">
                            <div class="col-md-6 col-sm-7">
                                <div class="banner_content3 pl-lg-5 animate__animated animate__fadeIn" data-animation="fadeIn" data-animation-delay="0.4s" data-parallax="{&quot;y&quot;: 30, &quot;smoothness&quot;: 10}" style="transform:translate3d(0px, 0.01px, 0px) rotateX(0deg) rotateY(0deg) rotateZ(0deg) scaleX(1) scaleY(1) scaleZ(1); -webkit-transform:translate3d(0px, 0.01px, 0px) rotateX(0deg) rotateY(0deg) rotateZ(0deg) scaleX(1) scaleY(1) scaleZ(1); ">
                                    <h2 class="animation font_style1 animated animate__fadeInDown" data-animation="fadeInDown" data-animation-delay="0.5s" style="animation-delay: 0.5s; opacity: 1;">@Model.Nombre</h2>
                                    <p class="animate__animated animate__fadeInUp" data-animation="fadeInUp" data-animation-delay="0.6s" style="animation-delay: 0.6s; opacity: 1;">
                                        <h4>
                                            <pre class="overflow_hide font_style1">@Model.Descripcion</pre>
                                        </h4>
                                    </p>
                                    @{
                                        float f = 0;
                                        float f1 = 0;
                                        float f3 = 0;
                                        string Existencias = "En Existencias";
                                        if (Model.Existencias <= 0)
                                        {
                                            Existencias = "Agotado";
                                        }
                                    }

                                    @if (Model.descuento == "" || Model.descuento == null)
                                    {

                                        string s = Model.Precio_de_Venta.ToString();
                                        decimal iv = 0;
                                        decimal.TryParse(s, out iv);
                                        <h3>Precio: $@((iv).ToString("0.00"))</h3>
                                    }
                                    else
                                    {
                                        f = float.Parse(Model.Precio_de_Venta.ToString());
                                        f1 = float.Parse(Model.descuento.ToString());
                                        f3 = f - (f * f1);

                                        <h3 style="text-decoration:line-through;color:crimson;">Precio: $@((f).ToString("0.00"))</h3>
                                        <h3 style="color:dodgerblue;">Precio: <strong>$@((f3).ToString("0.00"))<small class="ml-2 text-success">  @(f1*100)%</small></strong></h3>
                                    }
                                    <h3 class="text-warning">Disponible:<h3> @Existencias</h3></h3>
                                    <a class="js-cd-add-to-cart btn btn-default animate__animated animate__fadeInUp" data-id="@Model.idProducto" data-price="@f" href="#0" data-animation="fadeInUp" data-animation-delay="0.7s" style="animation-delay: 0.7s; opacity: 1;">Agregar al carrito</a>
                                    <a class="btn btn-white animate__animated animate__fadeInUp" asp-controller="Home" asp-action="Index" data-animation="fadeInUp" data-animation-delay="0.8s" style="animation-delay: 0.8s; opacity: 1;">Ir a Inicio</a>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-5">
                                <div id="picture-frame" class="banner_slider_img animate__animated animate__bounceInUp" data-animation="bounceInUp" data-animation-delay="0.4s" style="animation-delay: 0.4s; opacity: 1;">
                                    <img class="bounceimg" id="imageZoom" src="@Model.Foto" data-src="@Model.Foto" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="banner_shape">
                    <div class="shape22">
                        <div class="animate__animated animate__slideInLeft" data-animation="slideInLeft" data-animation-delay="0.5s" style="animation-delay: 0.5s; opacity: 1;">
