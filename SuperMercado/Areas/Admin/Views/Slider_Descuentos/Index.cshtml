@model SuperMercado.Models.ViewModels.SliderDescuentoMV
@{
    ViewData["Title"] = "Descuentos Y Sliders";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<ul class="nav nav-pills mb-5">
    <li class=""><a data-toggle="pill" href="#Sliders">Sliders</a></li>
    <li><a id="descuentos" data-toggle="pill" href="#Descuentos">Descuentos</a></li>
</ul>




<div class="tab-content">
    <div id="Sliders" class="tab-pane fade in active">
        <div id="Datalist">
            <div class="row mx-3 justify-content-between">
                <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3 cajaOptiones">
                    <div>
                        <div class="buscador">
                            <input type="search" value="" oninput="buscar(this.value.toLowerCase().trim().replaceAll('-',' '),'input')" placeholder="Buscar" />
