                    <div>
                        <label asp-for="oferta.porcentaje"></label>
                    </div>
                    <div>
                        <input asp-for="oferta.porcentaje" rows="4" style="width:100%;" name="oferta.porcentaje" />
                        <span asp-validation-for="oferta.porcentaje" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        <label asp-for="oferta.duracion_De_Oferta"></label>
                    </div>
